    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^9.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "nuxt": "^3.3.3",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.12",
    "@heroicons/vue": "^2.0.17",
    "@nuxtjs/google-fonts": "^3.0.0",
    "@pinia/nuxt": "^0.4.8",
    "pinia": "^2.0.34"
  }
